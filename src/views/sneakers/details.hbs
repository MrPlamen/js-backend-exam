{{setTitle 'SneakersParadise | Details'}}

    <section class="details-hero">
        <div class="wrap">
            <h2>Sneakers Details</h2>
        </div>
    </section>

    <section class="details-content">
        <div class="wrap">
            <div class="sneakers-details">
                <div class="sneakers-image">
                    <img src="{{sneakers.image}}" alt="shoe">
                </div>
                <div class="sneakers-info">
                    <h3>Brand: {{sneakers.brand}}</h3>
                    <p><strong>Model:</strong> {{sneakers.model}}</p>
                    <p><strong>Price:</strong> ${{sneakers.price}}</p>
                    <p><strong>Size:</strong> {{sneakers.size}}</p>
                    <p><strong>Condition:</strong> {{sneakers.condition}}</p>
                    <p><strong>Model Year:</strong> {{sneakers.year}}</p>
                    <p><strong>Description:</strong> {{sneakers.description}}</p>
                </div>
                
            </div>
            {{#if user}}
            <div class="buttons-wrap">
                {{#if isOwner}}
                <button class="btn edit"><a href="/sneakers/{{sneakers._id}}/edit">Edit</a></button>
                <button class="btn delete"><a href="/sneakers/{{sneakers._id}}/delete">Delete</a></button>
                {{else}}
                {{#if isPreferred}}
                <p class="prefer-message">You've already preferred these sneakers!</p>
                {{else}}
                <button class="btn prefer"><a href="/sneakers/{{sneakers._id}}/prefer">Prefer</a></button>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
