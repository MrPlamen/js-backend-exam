   {{setTitle 'SneakersParadise | Home'}}
   
    <section class="hero">
        <div class="hero-wrap">
            <h2>Welcome to Sneakers Paradise</h2>
            <p>Where Style Meets Comfort!</p>
            <a href="/catalog" class="btn">Shop Now</a>
        </div>
    </section>

    <section class="sneakers">
        <div class="wrap">
            <h2>Featured Sneakers</h2>
            <div class="sneaker-catalog">
                {{#each sneakers}}
                <div class="sneakers-item">
                    <img src="{{this.image}}">
                    <h3>{{this.brand}} {{this.model}}</h3>
                    <p>${{this.price}}</p>
                    <a href="/sneakers/{{this._id}}/details" class="btn">View Details</a>
                </div>
                {{else}}
                <p class="no-post">There haven't been any Sneakers posted yet.</p>
                {{/each}}
            </div>
        </div>

    </section>
